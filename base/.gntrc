[general]
mouse = 1
wm    = /usr/lib/gnt/irssi.so

[buddylist::menu]
c-x = window-close

[GntTree::binding]
c-n =
c-p =
c-x = window-close
f7  = show-menu
f8  = context-menu
j   = move-down
k   = move-up

[GntWidget::binding]
c-c = window-close
f8  = context-menu

[GntWindow::binding]
c-x = window-close
f7  = show-menu

[GntWM::binding]
c-a = action-list
c-x = window-close
c-n = window-next
c-p = window-prev
c-w = window-list
