#!/usr/bin/env python
# Renames filename(s) from lowercase to title case.
import os
import shutil
import sys

def capitalize(s):
    words = s.split(' ')
    capitalized = []
    for word in words:
        title = word[0].upper() + word[1:]
        capitalized.append(title)
    return ' '.join(capitalized)

for arg in sys.argv[1:]:
    src = os.path.abspath(arg)
    dest = os.path.abspath(capitalize(arg))
    if src != dest:
        shutil.move(src, dest)
